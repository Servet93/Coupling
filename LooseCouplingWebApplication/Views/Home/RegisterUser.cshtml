@model RegistrationUserViewModel
@{
    ViewData["Title"] = "Register User Page";
}

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Home" asp-action="RegisterUser" method="post" class="row g-3">
            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="col-12">
                <label asp-for="Adress" class="form-label"></label>
                <input asp-for="Adress" type="text" class="form-control" placeholder="1234 Main St" />
            </div>
            <div class="col-12">
                <label asp-for="Adress2" class="form-label"></label>
                <input asp-for="Adress2" class="form-control" placeholder="Apartment, studio, or floor">
            </div>
            <div class="col-md-6">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" id="inputCity">
            </div>
            <div class="col-md-4">
                <label asp-for="State" class="form-label"></label>
                <select asp-for="State" class="form-select">
                    <option selected>Choose...</option>
                    <option>Ataşehir</option>
                    <option>Bakırköy</option>
                    <option>Bağcılar</option>
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Zip" class="form-label" ></label>
                <input asp-for="Zip" class="form-control" />
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="CheckMeOut" class="form-check-input" />
                    <label asp-for="CheckMeOut" class="form-check-label" ></label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </form>        
    </div>
</div>