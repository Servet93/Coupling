@model VehicleData

@{
    ViewData["Title"] = "Read Vehicle Page";
}

<div class="row">
    <div class="col-md-6">
        @if (Model == null)
        {
            <form asp-controller="Home" asp-action="ReadVehicle" method="post" enctype="multipart/form-data" class="row g-3">
                <div class="input-group mb-3">
                    <label class="input-group-text" for="formFile">Upload</label>
                    <input type="file" name="formFile" id="formFile" class="form-control">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Read Vehicle</button>
                </div>
            </form>    
        }
        else
        {
            <div class="col-md-6">
                <label asp-for="IdentificationNumber" class="form-label"></label>
                <input asp-for="IdentificationNumber" type="email" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Manufacturer" class="form-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
            </div>
            <div class="col-12">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" type="text" class="form-control" placeholder="1234 Main St" />
            </div>
            <div class="col-12">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Apartment, studio, or floor">
            </div>
        }
    </div>
</div>